{
  "parser": "vue-eslint-parser",
  "env": {
    "browser": true,
    "es2021": true,
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "prettier"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["vue", "import"],
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/order-in-components": "error",
    "vue/attributes-order": "error",
    "vue/attribute-hyphenation": "error"
  }
}
